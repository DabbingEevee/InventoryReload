{
    "schemaVersion": 1,
    "id": "invreload",
    "version": "${version}",

    "name": "Inventory Reload",
    "description": "Offers a way to store and reload inventory on players using commands.",
    "authors": [
        "ExistingEevee"
    ],

    "license": "GNU GPLv3",
    "icon": "assets/invreload/icon.png",

    "environment": "*",
    "entrypoints": {
        "main": [
            "com.existingeevee.inventoryreload.InventoryReload"
        ]
    },

    "depends": {
        "fabricloader": ">=0.11.3",
        "fabric": "*",
        "minecraft": "1.17.x",
        "java": ">=16"
    },
    "entrypoints": {
        "cardinal-components": [
            "com.existingeevee.inventoryreload.components.InventoryComponents"
        ]
    },
    "custom": {
        "cardinal-components": [
            "invreload:inventories"
        ]
    }
}
